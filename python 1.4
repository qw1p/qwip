while True:
    user_input = input("Введите число: ")
    
    if user_input == "exit":
        print("Выполняется выход из программы...")
        break
    
    if user_input.lstrip('-').isdigit():
        num_length = len(user_input.lstrip('-'))
        if num_length == 1:
            print(f"В вашем числе {num_length} цифра")
        elif num_length > 1 and num_length < 5:
            print (f"В вашем числе {num_length} цифры")
        else:
            print (f"В вашем числе {num_length} цифр")
    else:
        print("Ошибка: введенные данные не являются числом.")
